citHeader("To cite package 'rlandscape' in publications use:")
     
year <- sub("-.*", "", meta$Date)
vers <- paste("R package version", meta$Version)
     
citEntry(entry="Manual",
         title = "rlandscape: Random Landscape Generation for Harvest Scheduling Models",
         author = personList(as.person("Gregor Thomas"),
                             as.person("Miranda J. Fix"),
                             as.person("Sandor F. Toth")),
         year = year,
         textVersion =
             sprintf("Gregor Thomas, Miranda J Fix and Sandor F Toth (%s). 'rlandscape: Random Landscape Generation for Harvest Scheduling Models', Version %s.", year, vers)
)
            
citEntry(
    entry     = "Article",
    author    = "Passolt, Gregor and Fix, Miranda J and Toth, Sandor F",
    title     = "A Voronoi tessellation based approach to generate hypothetical forest landscapes",
    journal   = "Canadian Journal of Forest Research",
    volume    = "43",
    number    = "1",
    pages     = "78--89",
    year      = "2012",
    publisher = "NRC Research Press",
    url       = "http://www.nrcresearchpress.com/doi/abs/10.1139/cjfr-2012-0265#.Vf3MyPlViko",
    textVersion = "Passolt, G., Fix, M. J., & Toth, S. F. (2012). A Voronoi tessellation based approach to generate hypothetical forest landscapes. Canadian Journal of Forest Research, 43(1), 78-89."
)
                    
